<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ASPApi.ASP10_ContactUs">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="Contact Us!"
                    android:textColor="@color/md_blue_900"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="Fill your detail here to contact us!"
                    android:textColor="@color/md_blue_900"
                    android:textSize="21dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/M7_txt_Name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Name"
                android:padding="10dp"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/M7_txt_Email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="4"
                android:hint="Email Address"
                android:padding="10dp"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/M7_txt_Contact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="4"
                android:hint="Contact Number"
                android:padding="10dp"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/M7_txt_Message"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="4"
                android:gravity="top"
                android:hint="Enter Your Query Message here...!"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="14dp" />


            <Button
                android:id="@+id/M7_btn_Submit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:onClick="A13_fun_Submit"
                android:text="Submit"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>