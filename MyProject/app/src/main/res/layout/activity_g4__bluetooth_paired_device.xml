<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="online.nitcalicut.myproject.Hardware.G4_BluetoothPairedDevice">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Bluetooth Paired Devices List"
        android:textColor="@color/md_black_1000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/G4_txtListz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Showing Paired Devices: \n"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/mytextsize"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="0dp" />


</LinearLayout>
