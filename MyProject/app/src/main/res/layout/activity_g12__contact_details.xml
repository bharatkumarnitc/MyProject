<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="online.nitcalicut.myproject.Hardware.G11_ContactDetails">



    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mymarginLeft"
        android:layout_marginTop="@dimen/mymarginTop"
        android:layout_weight="0"
        android:text="Contact Number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="@dimen/mytextsize"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblNumber"
            android:textSize="@dimen/mytextsize"
            android:layout_gravity="center"
            android:textColor="@color/md_black_1000"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:layout_marginTop="@dimen/mymarginTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

        <Button
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:layout_marginTop="@dimen/mymarginTop"
            android:layout_weight=".5"
            android:background="@drawable/btn_background"
            android:onClick="C33_fun_MakeCall"
            android:text="Make Call" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="19"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>

