<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="online.nitcalicut.myproject.Hardware.G13_CallLogWrite">


    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mymarginLeft"
        android:layout_marginTop="@dimen/mymarginTop"
        android:text="Call Log Manager"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/mytextsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:layout_marginTop="@dimen/mymarginTop"
            android:text="Mobile No"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/mytextsize" />

        <EditText
            android:id="@+id/G13_txt_MobileNoCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:layout_marginTop="@dimen/mymarginTop"
            android:hint="Mobile No" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mymarginTop"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:background="@drawable/btn_background"
            android:onClick="G13_fun_CallLogOutgoing"
            android:text="Outgoing" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:background="@drawable/btn_background"
            android:onClick="G13_fun_CallLogInComming"
            android:text="InComming" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mymarginLeft"
            android:background="@drawable/btn_background"
            android:onClick="G13_fun_CallLogMissedcall"
            android:text="Missedcall" />
    </LinearLayout>

</LinearLayout>
